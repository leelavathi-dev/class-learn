class Circle():
    pi = 3.14

    def __init__(self,r):
        self.r = r

    def getArea(self):
        area = Circle.pi*self.r*self.r
        print("circle area is :",area)

    def getCircumference(self):
        c = 2*Circle.pi*self.r
        print(" the circumference of circle is:", c)
a = Circle(6)
a.getArea()
a.getCircumference()
